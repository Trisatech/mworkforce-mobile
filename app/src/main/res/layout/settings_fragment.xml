<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/btnSync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginS"
        android:layout_marginLeft="@dimen/marginM"
        android:layout_marginRight="@dimen/marginM"
        android:layout_marginTop="@dimen/marginS">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/paddingSM">

                <ImageView
                    android:layout_width="@dimen/iconSizeSM"
                    android:layout_height="@dimen/iconSizeSM"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_sync" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginS"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/fontL"
                    android:text="Sinkronisasi"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/containerSyncItemCount"
                android:layout_width="@dimen/iconSizeM"
                android:layout_height="@dimen/iconSizeM"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/marginM"
                android:background="@drawable/bg_bullet_green">
                <TextView
                    android:id="@+id/txtSyncItemCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontM"
                    tools:text="2"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ImageView
        android:visibility="gone"
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/settingsMenuList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ProgressBar
            android:id="@+id/progressLoading"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/progressLoadingSize"
            android:layout_height="@dimen/progressLoadingSize"
            android:background="@color/colorNull"
            android:indeterminate="true" />
    </RelativeLayout>

</LinearLayout>
