<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/marginS"
    android:layout_marginTop="@dimen/marginS"
    android:layout_marginLeft="@dimen/marginM"
    android:layout_marginRight="@dimen/marginM">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="@dimen/paddingS"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/caontainerProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="120dp"
                android:layout_height="80dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtProcuductName"
                    android:layout_marginLeft="@dimen/marginS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:maxLines="2"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/fontL"
                    android:text="Lampu osram 20 watt"/>

                <TextView
                    android:id="@+id/txtProcuductPrice"
                    android:layout_marginLeft="@dimen/marginS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:maxLines="2"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/fontM"
                    android:text="Lampu osram 20 watt"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGreyLight">
            <EditText
                android:id="@+id/edtOrderCount"
                android:background="@color/colorNull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center_horizontal"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGreyDark"
                android:hint="0"/>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
