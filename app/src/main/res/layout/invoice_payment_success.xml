<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/iconSizeXL"
            android:layout_height="@dimen/iconSizeXL"
            android:background="@drawable/bullet_indicator_selected">

            <ImageView
                android:layout_width="@dimen/iconSizeM"
                android:layout_height="@dimen/iconSizeM"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check_white"/>

        </RelativeLayout>

        <TextView
            android:paddingTop="@dimen/paddingS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/regular"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/fontL"
            android:gravity="center"
            android:text="@string/labelInvoiceProcessSuccess" />


    </LinearLayout>

</RelativeLayout>
