<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:paddingTop="@dimen/paddingM"
        android:paddingBottom="@dimen/paddingS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/marginM"
            android:id="@+id/txtCurrentDate2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontXXL"
            tools:text="Kamis, 24 Feb 2018" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/marginM"
            android:id="@+id/txtCurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontXXL"
            tools:text="Kamis, 24 Feb 2018" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/containerEmptyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/marginXXXL">

            <ImageView
                android:layout_width="@dimen/emptyIconSize"
                android:layout_height="@dimen/emptyIconSize"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_empty"/>

            <TextView
                android:id="@+id/txtEmptyInfo"
                android:layout_marginTop="@dimen/marginS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/fontL"
                android:text="Laporan tidak ditemukan" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressLoading"
            android:visibility="gone"
            android:layout_width="@dimen/iconSizeL"
            android:layout_height="@dimen/iconSizeL"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>
