<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="settingsMenuItem"
            type="com.radya.sfa.view.settings.SettingsMenuDataBinding"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginS"
        android:layout_marginLeft="@dimen/marginM"
        android:layout_marginRight="@dimen/marginM"
        android:layout_marginTop="@dimen/marginS">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/paddingSM">

            <ImageView
                android:layout_width="@dimen/iconSizeM"
                android:layout_height="@dimen/iconSizeM"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher_round"
                tools:imageUrl="@{settingsMenuItem.id}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginS"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/fontL"
                tools:text="Logout"
                android:text="@{settingsMenuItem.menuName}"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
