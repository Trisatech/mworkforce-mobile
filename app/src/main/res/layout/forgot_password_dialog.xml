<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/marginM"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/iconSizeL"
            android:layout_height="@dimen/iconSizeL"
            android:padding="@dimen/paddingS"
            android:src="@drawable/ic_close_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog"
            android:padding="@dimen/paddingM"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/light"
                android:paddingBottom="@dimen/paddingS"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/fontM"
                android:text="@string/labelReserPassword" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/inputFormNormalHeight"
                android:background="@drawable/bg_input_field_grey_light">

                <EditText
                    android:id="@+id/edtEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorNull"
                    android:fontFamily="@font/regular"
                    android:imeOptions="actionDone"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/paddingM"
                    android:paddingRight="@dimen/paddingM"
                    android:singleLine="true"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/fontL"
                    tools:text="ade.rifaldi@gmail.com"
                    android:hint="@string/hintUserName"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnSendNow"
                android:layout_marginTop="@dimen/marginXL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnNormalHeight"
                android:background="@drawable/bg_btn_green">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bold"
                    android:text="@string/labelBtnSendNow"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontL" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressLoading"
        android:visibility="gone"
        android:layout_width="@dimen/iconSizeL"
        android:layout_height="@dimen/iconSizeL"
        android:layout_centerInParent="true"/>


</RelativeLayout>
