<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/marginM"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/iconSizeL"
            android:layout_height="@dimen/iconSizeL"
            android:padding="@dimen/paddingS"
            android:src="@drawable/ic_close_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical"
            android:paddingBottom="@dimen/paddingM"
            android:paddingLeft="@dimen/paddingM"
            android:paddingRight="@dimen/paddingM">

            <TextView
                android:layout_marginTop="@dimen/marginM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/bold"
                android:text="@string/hintMetodePembayaran"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/fontXL" />


            <RelativeLayout
                android:id="@+id/containerPaymentMethod"
                android:layout_marginTop="@dimen/marginS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/paddingS"
                android:paddingBottom="@dimen/paddingS">

                <TextView
                    android:id="@+id/txtPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/regular"
                    android:text="@string/hintPaymentMethod"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/fontL" />

                <ImageView
                    android:layout_width="@dimen/iconSizeM"
                    android:layout_height="@dimen/iconSizeM"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_down_grey" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/containerBank"
                android:layout_marginTop="@dimen/marginS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/paddingS"
                android:paddingBottom="@dimen/paddingS">

                <TextView
                    android:id="@+id/txtBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/regular"
                    android:text="@string/hintBank"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/fontL" />

                <ImageView
                    android:layout_width="@dimen/iconSizeM"
                    android:layout_height="@dimen/iconSizeM"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_down_grey" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/containerInput"
                android:layout_marginTop="@dimen/marginS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/inputGiroDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormNormalHeight"
                    android:background="@drawable/bg_input_field_grey_light">

                    <TextView
                        android:id="@+id/txtGiroDueDateInvisible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorNull"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/regular"
                        android:text="@string/hintGiroDueDate"
                        android:paddingLeft="@dimen/paddingM"
                        android:paddingRight="@dimen/paddingM"
                        android:singleLine="true"
                        android:visibility="invisible"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL" />

                    <TextView
                        android:id="@+id/txtGiroDueDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorNull"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/regular"
                        android:text="@string/hintGiroDueDate"
                        android:paddingLeft="@dimen/paddingM"
                        android:paddingRight="@dimen/paddingM"
                        android:singleLine="true"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/inputNoGiro"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormNormalHeight"
                    android:layout_marginTop="@dimen/marginXS"
                    android:background="@drawable/bg_input_field_grey_light">

                    <EditText
                        android:id="@+id/edtNoGiro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorNull"
                        android:fontFamily="@font/regular"
                        android:hint="@string/hintNoGiro"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingLeft="@dimen/paddingM"
                        android:paddingRight="@dimen/paddingM"
                        android:singleLine="true"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/inputAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormNormalHeight"
                    android:layout_marginTop="@dimen/marginXS"
                    android:background="@drawable/bg_input_field_grey_light">

                    <EditText
                        android:id="@+id/edtInputAmount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorNull"
                        android:fontFamily="@font/regular"
                        android:hint="@string/hintGiro"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:paddingLeft="@dimen/paddingM"
                        android:paddingRight="@dimen/paddingM"
                        android:singleLine="true"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/inputPhotoGiro"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/inputFormBigHeight"
                    android:layout_marginTop="@dimen/marginS"
                    android:background="@drawable/bg_input_field_grey_light">

                    <ImageView
                        android:id="@+id/imgGiro"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/marginS"
                        android:scaleType="centerInside" />

                    <ImageView
                        android:id="@+id/addPhotoStore"
                        android:padding="@dimen/paddingS"
                        android:layout_width="@dimen/iconSizeXL"
                        android:layout_height="@dimen/iconSizeXL"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_camera_grey_dark"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btnNormalHeight"
                android:layout_marginTop="@dimen/marginM"
                android:background="@drawable/bg_btn_green">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bold"
                    android:text="@string/labelSave"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontL" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressLoading"
        android:layout_width="@dimen/iconSizeL"
        android:layout_height="@dimen/iconSizeL"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
