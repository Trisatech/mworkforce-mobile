<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginS"
            android:layout_marginLeft="@dimen/marginM"
            android:layout_marginRight="@dimen/marginM"
            android:layout_marginTop="@dimen/marginM">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/paddingS"
                android:paddingLeft="@dimen/paddingM"
                android:paddingRight="@dimen/paddingM"
                android:paddingTop="@dimen/paddingXS">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/regular"
                        android:text="@string/labelTotalNotaPembayaran"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL" />

                    <TextView
                        android:id="@+id/txtNotaPembayaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL"
                        tools:text="Rp. 5.000.000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/regular"
                        android:text="@string/labelTotalNotaKredit"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL" />

                    <TextView
                        android:id="@+id/txtNotaKredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL"
                        tools:text="Rp. 2.000.000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/bold"
                        android:text="@string/labelTotalTertagih"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL" />

                    <TextView
                        android:id="@+id/txtTotalTertagih"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/bold"
                        android:textColor="@color/colorGreyDark"
                        android:textSize="@dimen/fontL"
                        tools:text="Rp. 3.000.000" />

                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_marginTop="@dimen/marginM"
            android:layout_marginBottom="@dimen/marginS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/paddingM"
            android:paddingLeft="@dimen/paddingM">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/regular"
                android:text="@string/labelMetodePembayaran"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/fontL" />

            <RelativeLayout
                android:id="@+id/btnAddPayment"
                android:layout_width="@dimen/iconSizeM"
                android:layout_height="@dimen/iconSizeM"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_bullet_green">
                <ImageView
                    android:id="@+id/icAddNew"
                    android:layout_width="@dimen/iconSizeS"
                    android:layout_height="@dimen/iconSizeS"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_add_white"/>
            </RelativeLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/listPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginM"
            android:layout_marginLeft="@dimen/marginM"
            android:layout_marginRight="@dimen/marginM"
            android:layout_marginTop="@dimen/marginL">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/paddingS"
                android:paddingLeft="@dimen/paddingM"
                android:paddingRight="@dimen/paddingM"
                android:paddingTop="@dimen/paddingXS">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/bold"
                    android:text="@string/labelSisa"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/fontL" />

                <TextView
                    android:id="@+id/txtSisa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/fontL"
                    tools:text="Rp. 1.500.000" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
