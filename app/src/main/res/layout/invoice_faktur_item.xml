<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="invoiceItem"
            type="com.radya.sfa.view.invoice.faktur.InvoiceFakturDataBinding"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginS"
        android:layout_marginLeft="@dimen/marginM"
        android:layout_marginRight="@dimen/marginM"
        android:layout_marginTop="@dimen/marginS">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingM">
            <TextView
                android:id="@+id/txtInvoice"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/fontL"
                tools:text="Rp. 500.000"
                android:text="@{invoiceItem.amount}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/txtInvoice"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/marginM">

                <RelativeLayout
                    android:id="@+id/indicatorSelected"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/iconSizeM"
                    android:layout_height="@dimen/iconSizeM"
                    android:layout_gravity="center_vertical"
                    android:background="@{invoiceItem.selected ? @drawable/bullet_indicator_selected : @drawable/bullet_indicator_standby}">

                    <ImageView
                        android:layout_width="@dimen/iconSizeS"
                        android:layout_height="@dimen/iconSizeS"
                        android:src="@drawable/ic_check_white"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtType"
                    android:layout_marginLeft="@dimen/marginS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGreyDark"
                    android:textSize="@dimen/fontL"
                    tools:text="FK 1 567"
                    android:text="@{invoiceItem.status}"/>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>
